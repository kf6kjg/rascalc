# http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.htm*,*.xhtml]
#Ignore these as Prettier is taking care of them.

[*.ts,*.tsx,*.js,*.json,*.mjs]
#Ignore these as Prettier is taking care of them.

[*.yml,*.yaml]
#Ignore these as Prettier is taking care of them.

[*.py]
indent_style = space
indent_size = 4

[*.md]
#Ignore these as Prettier is taking care of them.
